            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"/>

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="0dp"
                android:layout_height="match_parent"
